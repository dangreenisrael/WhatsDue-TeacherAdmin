<div class="modal-header">
    {{#link-to 'main'}}
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    {{/link-to}}
    <h4 class="modal-title"> Bulk change</h4>
</div>
<div class="modal-body">
    <form action="#" class="form-horizontal ">
        <div class="form-group">
            <div class="col-md-5">
                <div class="form-group input-append bootstrap-timepicker">
                    {{input value=time type="hidden" class=":input-small" id="time"}}
                    <span class="add-on"><i class="icon-time"></i></span>
                </div>
            </div>
            <div class="col-md-7 radio">
                <div class="col-md-6">
                    <div class="input-group ">
                        <span class="input-group-addon primary">
                            <input type="radio" name="day" checked="checked" value="no-change">
                        </span>
                        <span class="form-control">
                            <i>Keep&nbsp;Day</i>
                        </span>
                    </div><!-- /input-group -->
                    <div class="input-group ">
                        <span class="input-group-addon">
                            <input type="radio" name="day" value="0">
                        </span>
                        <span class="form-control">
                            Sunday
                        </span>
                    </div><!-- /input-group -->
                    <div class="input-group">
                        <span class="input-group-addon">
                            <input type="radio" name="day" value="1">
                        </span>
                        <span class="form-control">
                            Monday
                        </span>
                    </div><!-- /input-group -->
                    <div class="input-group">
                        <span class="input-group-addon">
                            <input type="radio" name="day" value="2">
                        </span>
                        <span class="form-control">
                            Tuesday
                        </span>
                    </div><!-- /input-group -->
                </div>

                <div class="col-md-6">
                    <div class="input-group ">
                        <span class="input-group-addon">
                            <input type="radio" name="day" value="3">
                        </span>
                        <span class="form-control">
                            Wednesday
                        </span>
                    </div><!-- /input-group -->
                    <div class="input-group">
                        <span class="input-group-addon">
                            <input type="radio" name="day" value="4">
                        </span>
                        <span class="form-control">
                            Thursday
                        </span>
                    </div><!-- /input-group -->
                    <div class="input-group">
                        <span class="input-group-addon">
                            <input type="radio" name="day" value="5">
                        </span>
                        <span class="form-control">
                            Friday
                        </span>
                    </div><!-- /input-group -->
                    <div class="input-group">
                        <span class="input-group-addon">
                            <input type="radio" name="day" value="6">
                        </span>
                        <span class="form-control">
                            Saturday
                        </span>
                    </div><!-- /input-group -->
                </div>

            </div>
        </div>
    </form>
</div>
<div class="modal-footer">
    <button class="btn btn-primary" type="button" {{action 'save'}} >Save</button>
</div>
